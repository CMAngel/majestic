#!/bin/bash

apps=(
'i3 Config'
'i3 Blocks'
'LX Appearance'
'Dunst'
'Compton'
'Rofi'
'Rofi Apps'
'Rofi Power'
'Rofi Configs'
'LightDM'
'LightDM Greeter'
'.Xresources'
'.xinitrc'
'.xprofile'
'.Xdefaults'
'.bashrc'
'.bash_aliases'
'.bash_profile'
)

res=$( printf "%s\n" "${apps[@]}" | rofi -dmenu -p "Rofi Apps" -bw 0 -lines 18 -separator-style none -location 0 -width 250 -hide-scrollbar -padding 5)

if [ "$res" ]; then
	case $res in
		'i3 Config') i3-msg exec pluma ~/.config/i3/config	;;
		'i3 Blocks') i3-msg exec pluma ~/.config/i3/blocks ;;
		'LX Appearance') i3-msg exec lxappearance ;;
		'Dunst') i3-msg exec pluma ~/.config/dunst/dunstrc ;;
		'Compton') i3-msg exec pluma ~/.config/compton.conf ;;
		'Rofi') i3-msg exec pluma ~/.config/rofi/config.rasi ;;
		'Rofi Apps') i3-msg exec pluma ~/.config/rofi/scripts/apps ;;
		'Rofi Power') i3-msg exec pluma ~/.config/rofi/scripts/power ;;
		'Rofi Configs') i3-msg exec pluma ~/.config/rofi/scripts/configs ;;		
		'LightDM') i3-msg exec sudo pluma /etc/lightdm/lightdm.conf ;;
		'LightDM Greeter') i3-msg exec sudo pluma /etc/lightdm/lightdm-gtk-greeter.conf ;;
		'.Xresources') i3-msg exec pluma ~/.Xresources ;;
		'.xinitrc') i3-msg exec pluma ~/.xinitrc ;;
		'.xprofile') i3-msg exec pluma ~/.xprofile ;;
		'.Xdefaults') i3-msg exec pluma ~/.Xdefaults ;;
		'.bashrc') i3-msg exec pluma ~/.bashrc ;;
		'.bash_aliases') i3-msg exec pluma ~/.bash_aliases ;;		
		'.bash_profile') i3-msg exec pluma ~/.bash_profile ;;				
	esac
fi
