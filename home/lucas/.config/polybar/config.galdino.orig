;----------------------------------------------------------
;	   V O L U M E
;----------------------------------------------------------

;[module/pavolume]
;type = custom/script
;interval = 2
;exec = ~/.config/polybar/pavolume.sh


;click-right = exec pavucontrol
;click-left = ~/.config/polybar/pavolume.sh --togmute
;scroll-up = ~/.config/polybar/pavolume.sh --up
;scroll-down = ~/.config/polybar/pavolume.sh --down

;label = %output%
;label-foreground = ${colors.white}
;format-padding = 1

;----------------------------------------------------------
;	   V O L U M E 
;----------------------------------------------------------


[module/volume]
type = internal/volume

format-volume-padding = 1
format-muted-padding = 1

master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default

; Optionally define speaker and headphone mixers
; Use the following command to list available mixer controls:
; $ amixer scontrols | sed -nr "s/.*'([[:alnum:]]+)'.*/\1/p"
master-mixer = Master

mapped = false

; NOTE: This is required if headphone_mixer is defined
; Use the following command to list available device controls
; $ amixer controls | sed -r "/CARD/\!d; s/.*=([0-9]+).*name='([^']+)'.*/printf '%3.0f: %s\n' '\1' '\2'/e" | sort
; Default: none
headphone-id = Headphone Jack

format-volume = <ramp-volume> <label-volume>
format-volume-foreground = ${colors.white}

label-volume = %percentage%%
label-volume-foreground = ${colors.foreground}
label-muted = 

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

ramp-headphones-0 = 
ramp-headphones-1 = 

;----------------------------------------------------------
;			   U S B
;----------------------------------------------------------

[module/usb]
type = custom/script
interval = 5
; Displays the devices in the bar
exec = ~/.config/polybar/usb.sh
; Execute the script if udiskie is runned
exec-if = pgrep -x udiskie

click-left = udiskie-umount --detach -a

label-foreground = ${colors.foreground}


;----------------------------------------------------------
;			   B L U E T O O T H
;----------------------------------------------------------

;[module/bluetooth]
;type = custom/script
;interval = 10
;exec = ~/.config/polybar/bluetooth.sh

;label = "%output%"
;label-foreground = ${colors.foreground}

;format = "<label> "


;----------------------------------------------------------
;		    P O W E R   M E N U
;----------------------------------------------------------

[module/powermenu]
type = custom/menu

format-spacing = 1
label-open = "  "

label-open-foreground = ${colors.red}
label-open-background = ${colors.black}
label-close =  cancel
label-close-foreground = ${colors.yellow}
label-separator = |
label-separator-foreground = ${colors.white}

menu-0-0 = suspend
menu-0-0-exec = menu-open-1
menu-0-1 = reboot
menu-0-1-exec = menu-open-2
menu-0-2 = "poweroff "
menu-0-2-exec = menu-open-3
menu-0-3 = "logout "
menu-0-3-exec = menu-open-4

menu-1-0 = SUPEND?
menu-1-0-exec = systemctl suspend

menu-3-0 = POWEROFF?
menu-3-0-exec = systemctl poweroff

menu-2-0 = REBOOT?
menu-2-0-exec = systemctl reboot

menu-4-0 = LOGOUT?
menu-4-0-exec = i3-msg exit
[settings]
screenchange-reload = true

;----------------------------------------------------------
;		    U S E R
;----------------------------------------------------------

[module/user]
type = custom/script

exec = getent passwd $USER | cut -d ':' -f 5 | cut -d ',' -f 1
interval = 300

format =  <label>
label = %output%


;----------------------------------------------------------
;		    S P O T I F Y
;----------------------------------------------------------

[module/spotify]

type = custom/script
tail = true
exec = ~/.config/polybar/spotify.sh %artist% ▸ %title%

format-background = ${colors.black}
format-foreground = ${colors.green}

format-prefix = " "
;format-prefix = "  "
format-prefix-background = ${colors.black}
format-prefix-foreground = ${colors.green}
internal = 1

format-padding = 1


;----------------------------------------------------------
;			C U S T O M
;----------------------------------------------------------

[module/allow]
type = custom/text
content = " | "
content-foreground = ${colors.selection}

[module/space]
type = custom/text
content = " "
content-background = ${colors.background}

[module/arch]
type = custom/text
content = "  "
content-foreground = ${colors.cyan}
click-left = ~/.config/rofi/scripts/drun
click-right = ~/.config/rofi/scripts/run
click-middle = ~/.config/rofi/scripts/janelas

; ------------------- END -------------------;
