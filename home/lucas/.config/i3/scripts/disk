. ~/.config/i3/cores.conf

dir="${BLOCK_INSTANCE:-$HOME}"
uso=$(df -h -P -l "$dir" | awk 'NR==2{print $5}' | tr -dc '0-9')

if [[ ${uso} -gt 75 ]]; then
	cor=$cormax
elif [[ ${uso} -gt 50 ]]; then
	cor=$cormed
elif [[ ${uso} -gt 25 ]]; then
	cor=$cormin
else
	cor=""
fi

echo "${uso}%"
echo "${uso}%"
echo "$cor"
