#!/bin/bash

icone="/usr/share/icons/Faience/actions/64/gnome-lockscreen.png"

xal=$(pgrep xautolock)

if [[ "$?" -eq 0 ]]; then
	if [[ $BLOCK_BUTTON -eq 1 ]]; then
		pkill -9 xautolock
		pkill -9 xautolock.sh
		pkill -9 i3lock
    fi

	echo ''
	echo ''
	echo '#3465a4'
else
	if [[ $BLOCK_BUTTON -eq 1 ]]; then
		sleep 1
		exec /usr/bin/xautolock -time 5 -locker 'i3lock-fancy -f Iosevka-Thin -t "Arch Linux" -p -- scrot -z' -detect -notify 30 -notifier "notify-send -i $icone --urgency=critical 'TRAVANDO a tela em 30 segundos'"
	fi

	echo ''
	echo ''
	echo ''
fi
