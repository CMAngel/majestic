#!/bin/bash

WALL="${HOME}/img/wallpapers/arch"

if [[ "${BLOCK_BUTTON}" -eq 1 ]]; then
	/usr/bin/feh --no-fehbg --bg-fill --randomize ${WALL}/*
elif [[ "${BLOCK_BUTTON}" -eq 2 ]]; then
	feh --no-fehbg --bg-fill --randomize ${WALL}/*
elif [[ "${BLOCK_BUTTON}" -eq 3 ]]; then
	hsetroot -solid "#1b1b1b" &
fi

echo ""
echo ""
echo ""
