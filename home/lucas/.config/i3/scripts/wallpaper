#!/bin/bash

. ${HOME}/bin/config.conf

if [[ "${BLOCK_BUTTON}" -eq 1 ]]; then
	~/bin/wallpaper.sh ~/img/wallpapers/arch-logo/2560x1600/
elif [[ "${BLOCK_BUTTON}" -eq 2 ]]; then
	~/bin/wallpaper.sh -r
elif [[ "${BLOCK_BUTTON}" -eq 3 ]]; then
	#hsetroot -solid "#1b1b1b" &
	~/bin/wallpaper.sh -c
fi

echo ""
echo ""
echo ""
