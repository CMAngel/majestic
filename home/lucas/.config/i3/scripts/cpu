. ~/.config/i3/cores.conf

tipo="${BLOCK_INSTANCE:-Mem}"

uso=$(grep 'cpu' /proc/stat | awk '{usage=($2+$4)*100/($2+$4+$5)} END {print usage}')
usada=$(echo "scale=0;${uso}/1" | bc)

if [[ ${usada} -gt 75 ]]; then
	cor=$cormax
elif [[ ${usada} -gt 50 ]]; then
	cor=$cormed
elif [[ ${usada} -gt 25 ]]; then
	cor=$cormin
else
	cor=""
fi

echo "${usada}%"
echo "${usada}%"
echo "$cor"

