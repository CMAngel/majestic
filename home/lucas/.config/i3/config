		#					borda			fundo			texto
		focused_workspace	$fundo-inativo	$fundo-inativo	$texto-ativo
		inactive_workspace	$fundo-inativo	$fundo-inativo	$texto-inativo
		urgent_workspace	$fundo-inativo	$fundo-inativo	$texto-urgente
    }
}
